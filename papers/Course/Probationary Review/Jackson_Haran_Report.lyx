begin{subequations}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\bar{x} & =\frac{x_{1}+x_{2}+x_{3}}{3}\\
\sym\left(X\right) & =X+X^{T}\\
\left\Vert \boldsymbol{u}\right\Vert _{X}^{2} & =\boldsymbol{u}^{T}X\boldsymbol{u}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
end{subequations}
\end_layout

\end_inset


\end_layout

\begin_layout Standard
Elements 
\begin_inset Formula $\left(2,3\right),\left(1,3\right),\left(1,2\right)$
\end_inset

 of 
\begin_inset Formula $\sym\left(U^{T}\dot{U}\Lambda\right)$
\end_inset

 can be written in the following form:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
2\left(\begin{array}{c}
\left(s\dot{x}-x\dot{s}+z\dot{y}-y\dot{z}\right)\left(\lambda_{2}-\lambda_{3}\right)\\
\left(s\dot{y}-y\dot{s}+x\dot{z}-z\dot{x}\right)\left(\lambda_{3}-\lambda_{1}\right)\\
\left(s\dot{z}-z\dot{s}+y\dot{x}-x\dot{y}\right)\left(\lambda_{1}-\lambda_{2}\right)
\end{array}\right)=2\left(\begin{array}{c}
\left(s\dot{x}+x\frac{x\dot{x}+y\dot{y}+z\dot{z}}{s}+z\dot{y}-y\dot{z}\right)\left(\lambda_{2}-\lambda_{3}\right)\\
\left(s\dot{y}+y\frac{x\dot{x}+y\dot{y}+z\dot{z}}{s}+x\dot{z}-z\dot{x}\right)\left(\lambda_{3}-\lambda_{1}\right)\\
\left(s\dot{z}+z\frac{x\dot{x}+y\dot{y}+z\dot{z}}{s}+y\dot{x}-x\dot{y}\right)\left(\lambda_{1}-\lambda_{2}\right)
\end{array}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Denoting elements 
\begin_inset Formula $\left(2,3\right),\left(1,3\right),\left(1,2\right)$
\end_inset

 of 
\begin_inset Formula $\sym\left(\Lambda U^{T}\nabla\boldsymbol{v}U\right)$
\end_inset

 by 
\begin_inset Formula $\boldsymbol{b}$
\end_inset

, this in turn is equal to:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
2\left(\begin{array}{ccc}
\lambda_{2}-\lambda_{3} & 0 & 0\\
0 & \lambda_{3}-\lambda_{1} & 0\\
0 & 0 & \lambda_{1}-\lambda_{2}
\end{array}\right)\left(\begin{array}{ccc}
\frac{x^{2}}{s}+s & \frac{xy}{s}+z & \frac{xz}{s}-y\\
\frac{yx}{s}-z & \frac{y^{2}}{s}+s & \frac{yz}{s}+x\\
\frac{zx}{s}+y & \frac{zy}{s}-x & \frac{z^{2}}{s}+s
\end{array}\right)\left(\begin{array}{c}
\dot{x}\\
\dot{y}\\
\dot{z}
\end{array}\right)=\boldsymbol{b}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Thus, using the fact that 
\begin_inset Formula $s^{2}+x^{2}+y^{2}+z^{2}=1$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left(\begin{array}{c}
\dot{x}\\
\dot{y}\\
\dot{z}
\end{array}\right)=-\frac{1}{2}\left(\begin{array}{ccc}
s & -z & y\\
z & s & -x\\
-y & x & s
\end{array}\right)\left(\begin{array}{ccc}
\frac{1}{\lambda_{2}-\lambda_{3}} & 0 & 0\\
0 & \frac{1}{\lambda_{3}-\lambda_{1}} & 0\\
0 & 0 & \frac{1}{\lambda_{1}-\lambda_{2}}
\end{array}\right)\boldsymbol{b}\label{eq:dq/dt}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The six equations contained in 
\begin_inset CommandInset ref
LatexCommand eqref
